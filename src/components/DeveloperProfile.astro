<style>
  .developer-profile {
    background: var(--card-bg);
    border-radius: 16px;
    padding: 3rem;
    margin: 4rem auto;
    max-width: 1000px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .profile-content {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    align-items: center;
  }

  .profile-image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    position: relative;
    z-index: 2;
  }

  .profile-background {
    position: absolute;
    top: 20px;
    left: 20px;
    right: -20px;
    bottom: -20px;
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    border-radius: 12px;
    z-index: 1;
  }

  .profile-info {
    padding: 1rem;
  }

  .profile-info h3 {
    font-size: 2rem;
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
  }

  .profile-info h4 {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .profile-info p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    color: var(--text-secondary);
    transition: color 0.3s ease;
  }

  .social-link:hover {
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .profile-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .profile-image-container {
      max-width: 300px;
      margin: 0 auto;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>